{
	"compilerOptions": {
		"target": "es6",
		"noImplicitAny": true,
		"sourceMap": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"diagnostics": true,
		"listFiles": true,
		"pretty": true,
		"moduleResolution": "node",
		"noEmitOnError": false,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"declaration": true,
		"declarationMap": true,
		"strict": true,
		"outDir": "./build"
	},
	"include": [
		"src/**/*.ts"
	]
}